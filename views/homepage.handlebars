<!-- Loop over each object in the projects array -->
{{#each projects as |project| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a class="title" href="/project/{{project.id}}">{{project.name}}</a>
    </h2>
    <p class="created">Created by {{project.user.name}} on {{format_date project.date_created}}</p>
    
  </div>
  <div class="col-md-7">
    <p class="description">
      {{project.description}}
    </p>
  </div>
</div>
{{/each}}
